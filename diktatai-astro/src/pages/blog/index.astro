---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const locale = 'de';
const allPosts = await getCollection('blog');
const posts = allPosts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout
  title="Blog - Diktat AI"
  description="Neuigkeiten, Tipps und Anleitungen rund um KI-Transkription und Spracherkennung."
  locale={locale}
  routeKey="blog"
>
  <div class="min-h-screen bg-gradient-to-br from-indigo-50/50 via-purple-50/30 to-white/40 py-12">
    <div class="container mx-auto px-4 max-w-4xl">
      <h1 class="text-4xl font-bold text-center mb-8">Blog</h1>
      <p class="text-lg text-center text-gray-600 mb-12">
        Neuigkeiten, Tipps und Anleitungen rund um KI-Transkription
      </p>

      <div class="space-y-8">
        {posts.map((post) => (
          <article class="bg-white/70 backdrop-blur-sm border border-indigo-200/50 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-200">
            <a href={`/blog/${post.slug}`} class="block">
              {post.data.image && (
                <img
                  src={post.data.image}
                  alt={post.data.title}
                  class="w-full h-48 object-cover rounded-xl mb-4"
                />
              )}
              <h2 class="text-2xl font-bold text-gray-800 mb-2 hover:text-indigo-600 transition-colors">
                {post.data.title}
              </h2>
              <p class="text-gray-600 mb-4">{post.data.description}</p>
              <time class="text-sm text-gray-500">
                {new Date(post.data.date).toLocaleDateString('de-DE', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            </a>
          </article>
        ))}
      </div>
    </div>
  </div>
</Layout>
