---
import { getTranslation, getLocalePath, appUrls, type Locale } from '../i18n/utils';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslation(locale);
const pricingPath = getLocalePath('pricing', locale);
---

<section class="py-20 bg-gradient-to-br from-indigo-600 via-purple-600 to-indigo-700">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-4xl md:text-5xl font-bold font-display text-white mb-6">
      {t('cta.title')}
    </h2>
    <p class="text-xl text-indigo-100 max-w-2xl mx-auto mb-10">
      {t('cta.description')}
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href={appUrls.register}
        class="btn btn-lg bg-white text-indigo-600 hover:bg-indigo-50 border-0 font-bold shadow-xl"
      >
        {t('cta.startFree')}
      </a>
      {pricingPath && (
        <a
          href={pricingPath}
          class="btn btn-lg btn-outline border-white text-white hover:bg-white/10 font-bold"
        >
          {t('cta.viewPricing')}
        </a>
      )}
    </div>
  </div>
</section>
