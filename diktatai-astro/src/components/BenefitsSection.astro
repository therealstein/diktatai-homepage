---
import { getTranslation, type Locale } from '../i18n/utils';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslation(locale);

const benefits = ['timeSaving', 'productivity', 'precision', 'security', 'focus'];
---

<!-- Benefits Section - Enhanced with Cards -->
<div class="container mx-auto px-4 py-16">
  <h2 class="font-display text-4xl font-bold text-center mb-4 tracking-tight">
    {t('benefits.title')}
  </h2>
  <p class="text-lg font-medium text-base-content/80 max-w-3xl mx-auto text-center mb-12 leading-relaxed">
    {t('benefits.description')}
  </p>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
    <div class="card glass bg-base-100 shadow-xl rounded-3xl border border-base-300 p-6">
      <ul class="space-y-4">
        {benefits.map((key) => (
          <li class="flex items-start gap-3">
            <div class="w-8 h-8 rounded-full bg-[#EE56A4] flex items-center justify-center text-white shrink-0 mt-1">
              âœ“
            </div>
            <div>
              <strong class="font-display text-lg font-semibold tracking-tight">
                {t(`benefits.${key}.title`)}
              </strong>
              <p class="text-base-content/80 leading-relaxed">
                {t(`benefits.${key}.description`)}
              </p>
            </div>
          </li>
        ))}
      </ul>
    </div>
    <div class="flex justify-center items-center">
      <!-- Placeholder for an image or illustration -->
      <img
        src="/diktatai-transkribieren.webp"
        alt={t('benefits.title')}
        class="rounded-3xl shadow-xl"
        width="700"
        height="700"
        loading="lazy"
      />
    </div>
  </div>
</div>
