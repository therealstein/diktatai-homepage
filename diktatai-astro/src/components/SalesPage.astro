---
import { routes } from '../i18n/routes';
import type { SalesTranslation } from '../i18n/userGroups/sales';

interface Props {
  locale: 'de' | 'en' | 'nl' | 'es' | 'fr' | 'sv';
  t: SalesTranslation;
}

const { locale, t } = Astro.props;
const registerUrl = 'https://app.diktat.ai/register';

// Get localized routes
const howItWorksRoute = routes.howItWorks[locale];
const contactRoute = routes.contact[locale];
const pricingRoute = routes.pricing[locale];
const datasafetyRoute = routes.datasafety[locale];
---

<div class="bg-base-100 text-base-content">
  <!-- Hero Section -->
  <div
    class="hero min-h-[40vh] relative"
    style="background: linear-gradient(135deg, #ef56a4 0%, #4a90e2 100%); background-size: cover; background-position: center;"
  >
    <div class="hero-content text-center">
      <div class="backdrop-blur-sm bg-white/10 p-8 rounded-3xl shadow-2xl border border-white/20">
        <h1 class="font-display text-4xl font-bold text-white mb-2" style="text-shadow: 0 0 5px rgba(0,0,0,0.7)">
          {t.hero.title}
        </h1>
        <p class="text-lg text-white" style="text-shadow: 0 0 5px rgba(0,0,0,0.7)">
          {t.hero.subtitle}
        </p>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="py-16 container mx-auto px-4 max-w-4xl">
    <div class="prose prose-lg max-w-none">
      <div class="text-center mb-12">
        <p class="text-xl">
          {t.main.text}
        </p>
        <a href={registerUrl} class="mt-6 inline-block">
          <button class="font-display bg-pink-500 text-white text-xl font-bold py-3 px-8 rounded-full hover:bg-pink-600 transition-all shadow-lg tracking-wide">
            {t.hero.cta}
          </button>
        </a>
      </div>

      <!-- Business Benefits Section -->
      <div class="card bg-base-200 shadow-xl mb-12 p-8 rounded-3xl border border-base-300">
        <h2 class="font-display text-2xl font-bold mb-6">
          {t.businessBenefits.title}
        </h2>
        <p class="mb-6">{t.businessBenefits.intro}</p>
        <ul class="space-y-4">
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>{t.businessBenefits.benefit1}</span>
          </li>
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>{t.businessBenefits.benefit2}</span>
          </li>
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>{t.businessBenefits.benefit3}</span>
          </li>
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>{t.businessBenefits.benefit4}</span>
          </li>
        </ul>
      </div>

      <!-- Process Section -->
      <div class="card bg-base-200 shadow-xl mb-12 p-8 rounded-3xl border border-base-300">
        <h2 class="font-display text-2xl font-bold mb-6">
          {t.process.title}
        </h2>
        <p class="mb-6">{t.process.intro}</p>
        <ul class="space-y-4">
          <li class="flex items-start">
            <div class="bg-pink-500 text-white rounded-full w-8 h-8 flex items-center justify-center mr-3 mt-1 flex-shrink-0">
              1
            </div>
            <span>{t.process.step1}</span>
          </li>
          <li class="flex items-start">
            <div class="bg-pink-500 text-white rounded-full w-8 h-8 flex items-center justify-center mr-3 mt-1 flex-shrink-0">
              2
            </div>
            <span>{t.process.step2}</span>
          </li>
          <li class="flex items-start">
            <div class="bg-pink-500 text-white rounded-full w-8 h-8 flex items-center justify-center mr-3 mt-1 flex-shrink-0">
              3
            </div>
            <span>{t.process.step3}</span>
          </li>
          <li class="flex items-start">
            <div class="bg-pink-500 text-white rounded-full w-8 h-8 flex items-center justify-center mr-3 mt-1 flex-shrink-0">
              4
            </div>
            <span>{t.process.step4}</span>
          </li>
        </ul>
      </div>

      <!-- Business Advantages Section -->
      <div class="card bg-base-200 shadow-xl mb-12 p-8 rounded-3xl border border-base-300">
        <h2 class="font-display text-2xl font-bold mb-6">
          {t.advantages.title}
        </h2>
        <p class="mb-6">{t.advantages.intro}</p>
        <ul class="space-y-4">
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>{t.advantages.advantage1}</span>
          </li>
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>{t.advantages.advantage2}</span>
          </li>
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>{t.advantages.advantage3}</span>
          </li>
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>{t.advantages.advantage4}</span>
          </li>
        </ul>
      </div>

      <!-- Integration Section -->
      <div class="card bg-gradient-to-br from-pink-500/10 to-pink-500/10 shadow-xl p-8 rounded-3xl border border-pink-500/20 mb-12">
        <h2 class="font-display text-2xl font-bold mb-6">
          {t.integration.title}
        </h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h3 class="font-display text-xl font-bold mb-4">
              {t.integration.email.title}
            </h3>
            <p>{t.integration.email.text}</p>
            <a href={howItWorksRoute} class="text-pink-500 hover:underline mt-2 inline-block">
              {t.integration.email.link} &rarr;
            </a>
          </div>
          <div>
            <h3 class="font-display text-xl font-bold mb-4">
              {t.integration.api.title}
            </h3>
            <p>{t.integration.api.text}</p>
            <a href={contactRoute} class="text-pink-500 hover:underline mt-2 inline-block">
              {t.integration.api.link} &rarr;
            </a>
          </div>
        </div>
      </div>

      <!-- FAQ Section -->
      <div class="mb-12">
        <h2 class="font-display text-3xl font-bold mb-8 text-center">
          {t.faq.title}
        </h2>
        <div class="space-y-6">
          <div class="card bg-base-200 p-6 rounded-2xl">
            <h3 class="font-display text-xl font-bold mb-2">
              {t.faq.q1.question}
            </h3>
            <p>{t.faq.q1.answer}</p>
          </div>
          <div class="card bg-base-200 p-6 rounded-2xl">
            <h3 class="font-display text-xl font-bold mb-2">
              {t.faq.q2.question}
            </h3>
            <p>{t.faq.q2.answer}</p>
          </div>
          <div class="card bg-base-200 p-6 rounded-2xl">
            <h3 class="font-display text-xl font-bold mb-2">
              {t.faq.q3.question}
            </h3>
            <p>{t.faq.q3.answer}</p>
          </div>
          <div class="card bg-base-200 p-6 rounded-2xl">
            <h3 class="font-display text-xl font-bold mb-2">
              {t.faq.q4.question}
            </h3>
            <p>{t.faq.q4.answer}</p>
          </div>
        </div>
      </div>

      <!-- Final CTA -->
      <div class="card bg-gradient-to-br from-pink-500/10 to-pink-500/10 shadow-xl p-8 rounded-3xl border border-pink-500/20 text-center">
        <h2 class="font-display text-2xl font-bold mb-4">
          {t.finalCta.title}
        </h2>
        <p class="text-lg mb-8">
          {t.finalCta.text}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={registerUrl}>
            <button class="font-display bg-pink-500 text-white text-xl font-bold py-3 px-8 rounded-full hover:bg-pink-600 transition-all shadow-lg tracking-wide w-full sm:w-auto">
              {t.finalCta.startFree}
            </button>
          </a>
          <a href={pricingRoute}>
            <button class="font-display bg-white text-pink-500 text-xl font-bold py-3 px-8 rounded-full hover:bg-gray-50 transition-all shadow-lg tracking-wide border-2 border-pink-500 w-full sm:w-auto">
              {t.finalCta.viewPricing}
            </button>
          </a>
        </div>
        <div class="mt-8 space-x-4">
          <a href={pricingRoute} class="text-pink-500 hover:underline">
            {t.finalCta.pricingModels}
          </a>
          <span class="text-gray-400">|</span>
          <a href={datasafetyRoute} class="text-pink-500 hover:underline">
            {t.finalCta.securityArchitecture}
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.card {
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.card:hover {
  transform: translateY(-5px);
}
</style>
