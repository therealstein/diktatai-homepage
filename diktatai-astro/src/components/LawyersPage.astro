---
import { routes } from '../i18n/routes';
import type { LawyersTranslation } from '../i18n/userGroups/lawyers';

interface Props {
  locale: 'de' | 'en' | 'nl' | 'es' | 'fr' | 'sv';
  t: LawyersTranslation;
}

const { locale, t } = Astro.props;
const registerUrl = 'https://app.diktat.ai/register';

const getLocalizedPath = (routeKey: keyof typeof routes) => {
  const route = routes[routeKey];
  if (!route) return '/';
  const path = route[locale];
  return path || route.de || '/';
};
---

<div class="bg-base-100 text-base-content">
  <!-- Modern Hero Section with Background Image and Glass Effect -->
  <div
    class="hero min-h-[85vh] relative bg-cover bg-center flex items-center justify-center"
    style="background-image: url('/herobg.webp')"
  >
    <!-- Background overlay for better contrast -->
    <div class="absolute inset-0 bg-gradient-to-br from-pink-900/30 via-purple-900/25 to-indigo-900/20"></div>

    <!-- Floating decorative elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-10 left-10 w-20 h-20 bg-gradient-to-br from-pink-400/20 to-purple-400/20 rounded-full blur-xl animate-pulse"></div>
      <div class="absolute top-32 right-16 w-32 h-32 bg-gradient-to-br from-purple-400/20 to-indigo-400/20 rounded-full blur-xl animate-pulse" style="animation-delay: 1s"></div>
      <div class="absolute bottom-20 left-1/4 w-24 h-24 bg-gradient-to-br from-indigo-400/20 to-pink-400/20 rounded-full blur-xl animate-pulse" style="animation-delay: 2s"></div>
    </div>

    <div class="hero-content text-center w-full px-4 py-8 md:py-16 flex justify-center items-center relative z-10">
      <!-- Main content card with glass effect -->
      <div class="bg-white/90 backdrop-blur-lg border border-pink-200/60 rounded-3xl p-8 md:p-12 lg:p-16 shadow-2xl hover:shadow-3xl transition-all duration-500 w-full max-w-5xl">
        <!-- Badge for legal professionals -->
        <div class="mb-6">
          <span class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-pink-100 to-purple-100 border border-pink-300/50 rounded-full text-sm font-semibold text-pink-700">
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            {t.badge.euServer}
          </span>
        </div>

        <!-- Title with gradient text -->
        <div class="relative mb-6">
          <h1 class="animated-gradient text-4xl md:text-5xl lg:text-6xl font-bold bg-gradient-to-r from-pink-600 via-purple-600 to-indigo-600 bg-clip-text text-transparent leading-tight tracking-tight">
            {t.hero.title}
          </h1>
          <div class="absolute -inset-4 bg-gradient-to-r from-pink-500/10 via-purple-500/10 to-indigo-500/10 blur-2xl rounded-2xl -z-10"></div>
        </div>

        <!-- Value proposition -->
        <div class="mb-8">
          <p class="text-xl md:text-2xl font-semibold text-gray-800 leading-relaxed max-w-4xl mx-auto">
            {t.hero.subtitle}
          </p>
        </div>

        <!-- CTA Button -->
        <div class="flex justify-center mb-8">
          <a href={registerUrl}>
            <button class="group relative px-10 py-5 bg-gradient-to-r from-pink-500 to-purple-600 hover:from-pink-600 hover:to-purple-700 text-white font-bold text-xl rounded-2xl shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-300 tracking-wide overflow-hidden">
              <div class="absolute -inset-1 bg-gradient-to-r from-pink-500 to-purple-600 rounded-2xl blur opacity-30 group-hover:opacity-50 transition duration-300"></div>
              <span class="relative flex items-center justify-center gap-2">
                {t.cta.start}
                <svg class="h-5 w-5 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </span>
            </button>
          </a>
        </div>

        <!-- Trust signals / Social proof -->
        <div class="mt-8 pt-6 border-t border-gray-200/50">
          <div class="flex flex-col sm:flex-row items-center justify-center gap-6 text-gray-600">
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm font-medium">{t.trustSignals.noCreditCard}</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm font-medium">{t.trustSignals.readyIn2Min}</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm font-medium">{t.badge.euServer}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="py-16 container mx-auto px-4 max-w-6xl">
    <!-- For Lawyers Section - Enhanced with Cards -->
    <div class="mb-20">
      <h2 class="font-display text-4xl md:text-5xl font-bold mb-4 text-center bg-gradient-to-r from-pink-600 to-purple-600 bg-clip-text text-transparent">
        {t.sections.indispensable.title}
      </h2>
      <p class="text-center text-gray-600 mb-12 text-lg max-w-3xl mx-auto">
        {t.sections.indispensable.subtitle}
      </p>

      <div class="grid md:grid-cols-2 gap-8 mb-8">
        <!-- Lawyers Card -->
        <div class="card bg-gradient-to-br from-pink-50 to-purple-50 shadow-xl p-4 md:p-8 rounded-3xl border border-pink-200 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
          <div class="flex items-center gap-2 md:gap-3 mb-4 md:mb-6">
            <div class="w-10 h-10 md:w-12 md:h-12 bg-gradient-to-br from-pink-500 to-purple-600 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="h-5 w-5 md:h-7 md:w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="font-display text-lg md:text-2xl font-bold text-gray-800 break-words">
              {t.sections.indispensable.lawyers.title}
            </h3>
          </div>
          <ul class="space-y-4">
            {t.sections.indispensable.lawyers.points.map((point) => (
              <li class="flex items-start">
                <svg class="h-6 w-6 text-pink-600 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700">{point}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- ReFas Card -->
        <div class="card bg-gradient-to-br from-purple-50 to-indigo-50 shadow-xl p-4 md:p-8 rounded-3xl border border-purple-200 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
          <div class="flex items-center gap-2 md:gap-3 mb-4 md:mb-6">
            <div class="w-10 h-10 md:w-12 md:h-12 bg-gradient-to-br from-purple-500 to-indigo-600 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="h-5 w-5 md:h-7 md:w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="font-display text-lg md:text-2xl font-bold text-gray-800 break-words">
              {t.sections.indispensable.refas.title}
            </h3>
          </div>
          <ul class="space-y-4">
            {t.sections.indispensable.refas.points.map((point) => (
              <li class="flex items-start">
                <svg class="h-6 w-6 text-purple-600 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700">{point}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>

    <!-- Process Section - Visual Timeline -->
    <div class="mb-20">
      <h2 class="font-display text-4xl md:text-5xl font-bold mb-4 text-center bg-gradient-to-r from-pink-600 to-purple-600 bg-clip-text text-transparent">
        {t.sections.process.title}
      </h2>
      <p class="text-center text-gray-600 mb-12 text-lg max-w-3xl mx-auto">
        {t.sections.process.description}
      </p>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {t.sections.process.steps.map((step, index) => (
          <div class="relative group">
            <div class="bg-white p-6 rounded-2xl shadow-lg border border-gray-200 hover:shadow-xl transition-all duration-300 hover:-translate-y-2 h-full">
              <div class="w-14 h-14 bg-gradient-to-br from-pink-500 to-purple-600 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
                <span class="text-white font-bold text-xl">{index + 1}</span>
              </div>
              <p class="text-gray-700 leading-relaxed">{step}</p>
            </div>
            {index < 3 && (
              <div class="hidden lg:block absolute top-1/2 -right-3 transform -translate-y-1/2 z-10">
                <svg class="h-6 w-6 text-pink-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>

    <!-- Mid-page CTA -->
    <div class="mb-20 bg-gradient-to-r from-pink-500 to-purple-600 rounded-3xl p-12 text-center shadow-2xl relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-0 left-0 w-64 h-64 bg-white rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 right-0 w-64 h-64 bg-white rounded-full blur-3xl"></div>
      </div>
      <div class="relative z-10">
        <h3 class="font-display text-3xl md:text-4xl font-bold text-white mb-4">
          {t.cta.optimize}
        </h3>
        <p class="text-white/90 text-lg mb-8 max-w-2xl mx-auto">
          {t.sections.midCta.subtitle}
        </p>
        <a href={registerUrl}>
          <button class="px-10 py-5 bg-white text-pink-600 font-bold text-xl rounded-2xl shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-300 tracking-wide">
            {t.cta.start}
          </button>
        </a>
      </div>
    </div>

    <!-- Advantages Section - Icon Grid -->
    <div class="mb-20">
      <h2 class="font-display text-4xl md:text-5xl font-bold mb-4 text-center bg-gradient-to-r from-pink-600 to-purple-600 bg-clip-text text-transparent">
        {t.sections.advantages.title}
      </h2>
      <p class="text-center text-gray-600 mb-12 text-lg max-w-3xl mx-auto">
        {t.sections.advantages.description}
      </p>

      <div class="grid md:grid-cols-2 gap-6">
        {t.sections.advantages.points.map((point, index) => (
          <div class={`bg-white p-6 rounded-2xl shadow-lg border border-gray-200 hover:shadow-xl transition-all duration-300 hover:-translate-y-1 ${index === 4 ? 'md:col-span-2' : ''}`}>
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-gradient-to-br from-pink-500 to-purple-600 rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <p class="text-gray-700 leading-relaxed">{point}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Workflow Integration Section -->
    <div class="mb-20">
      <h2 class="font-display text-4xl md:text-5xl font-bold mb-4 text-center bg-gradient-to-r from-pink-600 to-purple-600 bg-clip-text text-transparent">
        {t.sections.workflow.title}
      </h2>
      <p class="text-center text-gray-600 mb-12 text-lg max-w-3xl mx-auto">
        {t.sections.workflow.description}
      </p>

      <div class="grid md:grid-cols-2 gap-8 mb-8">
        <!-- Email Integration -->
        <div class="bg-gradient-to-br from-blue-50 to-indigo-50 p-8 rounded-3xl shadow-lg border border-blue-200 hover:shadow-xl transition-all duration-300">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="font-display text-2xl font-bold text-gray-800">
              {t.sections.workflow.email.title}
            </h3>
          </div>
          <p class="text-gray-700 mb-4">{t.sections.workflow.email.description}</p>
          <a href={getLocalizedPath('howItWorks')} class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 font-semibold">
            {t.sections.workflow.email.link}
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>

        <!-- Software Integration -->
        <div class="bg-gradient-to-br from-green-50 to-emerald-50 p-8 rounded-3xl shadow-lg border border-green-200 hover:shadow-xl transition-all duration-300">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-emerald-600 rounded-xl flex items-center justify-center">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
              </svg>
            </div>
            <h3 class="font-display text-2xl font-bold text-gray-800">
              {t.sections.workflow.integration.title}
            </h3>
          </div>
          <p class="text-gray-700 mb-4">{t.sections.workflow.integration.description}</p>
          <a href={getLocalizedPath('contact')}>
            <button class="px-6 py-3 bg-gradient-to-r from-green-500 to-emerald-600 text-white font-semibold rounded-xl hover:from-green-600 hover:to-emerald-700 transition-all shadow-md hover:shadow-lg">
              {t.sections.workflow.integration.button}
            </button>
          </a>
        </div>
      </div>

      <!-- Workflow Benefits -->
      <div class="bg-white p-8 rounded-3xl shadow-lg border border-gray-200">
        <h3 class="font-display text-2xl font-bold mb-6 text-gray-800">
          {t.sections.workflow.benefits.title}
        </h3>
        <div class="grid md:grid-cols-3 gap-6">
          {t.sections.workflow.benefits.points.map((benefit) => (
            <div class="flex items-start gap-3">
              <svg class="h-6 w-6 text-pink-600 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">{benefit}</span>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- FAQ Section - Accordion Style -->
    <div class="mb-20">
      <h2 class="font-display text-4xl md:text-5xl font-bold mb-4 text-center bg-gradient-to-r from-pink-600 to-purple-600 bg-clip-text text-transparent">
        {t.sections.faq.title}
      </h2>
      <p class="text-center text-gray-600 mb-12 text-lg max-w-3xl mx-auto">
        {t.sections.faq.description}
      </p>

      <div class="max-w-4xl mx-auto space-y-4">
        {t.sections.faq.questions.map((faq) => (
          <div class="bg-white rounded-2xl shadow-md border border-gray-200 overflow-hidden hover:shadow-lg transition-all duration-300">
            <details class="group">
              <summary class="cursor-pointer p-6 flex justify-between items-center font-display text-lg font-semibold text-gray-800 hover:text-pink-600 transition-colors">
                <span>{faq.title}</span>
                <svg class="h-5 w-5 text-gray-500 group-open:rotate-180 transition-transform flex-shrink-0 ml-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <div class="px-6 pb-6 text-gray-700 leading-relaxed">
                {faq.answer}
              </div>
            </details>
          </div>
        ))}
      </div>
    </div>

    <!-- Final CTA Section - Enhanced -->
    <div class="relative bg-gradient-to-br from-pink-600 via-purple-600 to-indigo-600 rounded-3xl p-12 md:p-16 text-center shadow-2xl overflow-hidden">
      <!-- Decorative background elements -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-0 left-0 w-96 h-96 bg-white rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 right-0 w-96 h-96 bg-white rounded-full blur-3xl"></div>
      </div>

      <div class="relative z-10">
        <h2 class="font-display text-3xl md:text-5xl font-bold text-white mb-4">
          {t.sections.final.title}
        </h2>
        <p class="text-white/90 text-lg md:text-xl mb-10 max-w-3xl mx-auto">
          {t.sections.final.description}
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
          <a href={registerUrl}>
            <button class="px-10 py-5 bg-white text-pink-600 font-bold text-xl rounded-2xl shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-300 tracking-wide w-full sm:w-auto">
              {t.sections.final.links.start}
            </button>
          </a>
          <a href={getLocalizedPath('pricing')}>
            <button class="px-10 py-5 bg-transparent border-2 border-white text-white font-bold text-xl rounded-2xl hover:bg-white hover:text-pink-600 transition-all duration-300 tracking-wide w-full sm:w-auto">
              {t.sections.final.links.pricing}
            </button>
          </a>
        </div>

        <div class="flex flex-wrap justify-center gap-6 text-white/80">
          <a href={getLocalizedPath('pricing')} class="hover:text-white transition-colors font-medium">
            {t.sections.final.links.pricing}
          </a>
          <span>â€¢</span>
          <a href={getLocalizedPath('datasafety')} class="hover:text-white transition-colors font-medium">
            {t.sections.final.links.security}
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* Gradient text animation */
@keyframes gradient-shift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.animated-gradient {
  background-size: 200% 200%;
  animation: gradient-shift 4s ease infinite;
}

/* Custom shadow */
.shadow-3xl {
  box-shadow: 0 35px 60px -12px rgba(0, 0, 0, 0.3);
}

/* Smooth transitions for details/summary */
details summary {
  list-style: none;
}

details summary::-webkit-details-marker {
  display: none;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .hero-content > div {
    margin: 1rem;
    padding: 2rem 1.5rem;
  }
}
</style>
