---
import { getTranslation, type Locale } from '../i18n/utils';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslation(locale);

const steps = ['upload', 'transcription', 'secureProcessing', 'readyToUse'];
---

<!-- How It Works Section -->
<div class="silver-bg py-16 my-8">
  <div class="container mx-auto px-4 text-center">
    <h2 class="font-display text-4xl font-bold mb-4 tracking-tight">{t('howItWorks.title')}</h2>
    <p class="text-lg font-medium text-base-content/80 max-w-3xl mx-auto mb-12 leading-relaxed">
      {t('howItWorks.description')}
    </p>
    <ul class="steps steps-vertical lg:steps-horizontal w-full">
      {steps.map((key) => (
        <li class="step step-primary">
          <div class="mt-4 lg:mt-8">
            <div class="font-display font-semibold text-lg">{t(`howItWorks.${key}`)}</div>
            <div class="text-sm text-base-content/70">{t(`howItWorks.${key}Description`)}</div>
          </div>
        </li>
      ))}
    </ul>
  </div>
</div>

<style>
  .silver-bg {
    background: linear-gradient(to right, #f5f5f5, #e0e0e0, #c0c0c0, #a9a9a9);
  }
</style>
