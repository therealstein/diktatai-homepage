---
import { getLocalePath, appUrls, type Locale } from '../i18n/utils';

interface Props {
  locale: Locale;
  t: Record<string, any>;
}

const { locale, t } = Astro.props;
const howItWorksPath = getLocalePath('howItWorks', locale);
const termsPath = getLocalePath('terms', locale);
const businessSuitePath = getLocalePath('businessSuite', locale);
const contactPath = getLocalePath('contact', locale);
---

<div class="min-h-screen bg-gradient-to-br from-indigo-50/50 via-purple-50/30 to-white/40">
  <!-- Hero Section -->
  <div class="relative py-20 overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 bg-gradient-to-br from-indigo-50/50 via-purple-50/30 to-white/40">
      <div class="absolute top-10 left-10 w-20 h-20 bg-gradient-to-br from-indigo-200/40 to-purple-200/40 rounded-full blur-xl"></div>
      <div class="absolute top-32 right-16 w-32 h-32 bg-gradient-to-br from-purple-200/40 to-pink-200/40 rounded-full blur-xl"></div>
      <div class="absolute bottom-20 left-1/4 w-24 h-24 bg-gradient-to-br from-blue-200/40 to-indigo-200/40 rounded-full blur-xl"></div>
    </div>

    <div class="container mx-auto px-4 text-center relative z-10">
      <div class="max-w-5xl mx-auto">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-indigo-100 to-purple-100 rounded-full mb-8">
          <svg class="h-5 w-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          <span class="text-sm font-semibold text-indigo-800">{t.hero.badge}</span>
        </div>

        <!-- Main Title -->
        <h1 class="text-5xl md:text-6xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-6">
          {t.hero.title}
        </h1>

        <!-- Subtitle -->
        <p class="text-xl text-gray-600 leading-relaxed mb-8 max-w-3xl mx-auto">
          {t.hero.subtitle}
        </p>

        <!-- Hero Stats -->
        <div class="flex flex-wrap justify-center gap-8 mb-12">
          <div class="text-center">
            <div class="text-3xl font-bold text-indigo-600 mb-1">{t.hero.stats.accuracy}</div>
            <div class="text-sm text-gray-600">{t.hero.stats.accuracyLabel}</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-purple-600 mb-1">{t.hero.stats.users}</div>
            <div class="text-sm text-gray-600">{t.hero.stats.usersLabel}</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600 mb-1">{t.hero.stats.languages}</div>
            <div class="text-sm text-gray-600">{t.hero.stats.languagesLabel}</div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={appUrls.register}>
            <button class="px-8 py-4 bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white font-semibold rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105">
              {t.hero.cta.primary}
            </button>
          </a>
          {howItWorksPath && (
            <a href={howItWorksPath}>
              <button class="px-8 py-4 bg-white border-2 border-indigo-500 text-indigo-600 font-semibold rounded-xl hover:bg-indigo-50 transition-all duration-200 shadow-lg hover:shadow-xl">
                {t.hero.cta.secondary}
              </button>
            </a>
          )}
        </div>
      </div>
    </div>
  </div>

  <!-- Pricing Cards -->
  <div class="pb-16 container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      <!-- Free Plan -->
      <div class="bg-white/70 backdrop-blur-sm border border-indigo-200/50 rounded-2xl p-8 shadow-lg hover:shadow-xl h-full flex flex-col">
        <div class="text-center mb-8">
          <div class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-gray-800 mb-2">{t.freePlan.title}</h2>
          <p class="text-gray-600 mb-4">{t.freePlan.subtitle}</p>
          <div class="text-4xl font-bold text-gray-800">
            €0
            <span class="text-lg font-normal text-gray-600">/{t.common.month}</span>
          </div>
        </div>

        <ul class="space-y-4 flex-grow mb-8">
          <li class="flex items-start gap-3">
            <svg class="h-6 w-6 text-emerald-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-700">{t.freePlan.features.audioLimit}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-6 w-6 text-emerald-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-700">{t.freePlan.features.reliableTranscription}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-6 w-6 text-emerald-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-700">{t.freePlan.features.easyHandling}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-6 w-6 text-emerald-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-700">{t.freePlan.features.basicSupport}</span>
          </li>
        </ul>

        <div class="mt-auto">
          <a href={appUrls.register} class="block">
            <button class="w-full py-4 bg-gray-800 hover:bg-gray-900 text-white font-semibold rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl">
              {t.freePlan.cta}
            </button>
          </a>
          <p class="text-center text-sm text-gray-500 mt-3">{t.freePlan.noCreditCard}</p>
        </div>
      </div>

      <!-- Pro Plan -->
      <div class="bg-gradient-to-br from-indigo-600 to-purple-700 rounded-2xl p-8 shadow-2xl h-full flex flex-col relative overflow-hidden transform md:scale-105">
        <!-- Early Bird Badge -->
        <div class="absolute top-4 right-4 bg-yellow-400 text-yellow-900 text-xs font-bold px-3 py-1 rounded-full">
          {t.proPlan.earlyBird}
        </div>

        <div class="text-center mb-8">
          <div class="w-16 h-16 bg-white/20 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-white mb-2">{t.proPlan.title}</h2>
          <p class="text-indigo-100 mb-4">{t.proPlan.subtitle}</p>
          <div class="text-4xl font-bold text-white">
            €9,99
            <span class="text-lg font-normal text-indigo-200">/{t.common.month}</span>
          </div>
          <p class="text-sm text-indigo-200 mt-2">{t.proPlan.savings}</p>
        </div>

        <ul class="space-y-4 flex-grow mb-8">
          <li class="flex items-start gap-3">
            <svg class="h-6 w-6 text-yellow-300 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-white">{t.proPlan.features.unlimited}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-6 w-6 text-yellow-300 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-white">{t.proPlan.features.maxAccuracy}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-6 w-6 text-yellow-300 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-white">{t.proPlan.features.priorityProcessing}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-6 w-6 text-yellow-300 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-white">{t.proPlan.features.premiumSupport}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-6 w-6 text-yellow-300 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-white">{t.proPlan.features.apiAccess}</span>
          </li>
        </ul>

        <div class="mt-auto">
          <a href={appUrls.register} class="block">
            <button class="w-full py-4 bg-white hover:bg-gray-50 text-indigo-600 font-bold rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl">
              {t.proPlan.cta}
            </button>
          </a>
          <p class="text-center text-sm text-indigo-200 mt-3">{t.proPlan.trial}</p>
        </div>
      </div>

      <!-- Business Plan -->
      <div class="bg-white/70 backdrop-blur-sm border border-indigo-200/50 rounded-2xl p-8 shadow-lg hover:shadow-xl h-full flex flex-col">
        <div class="text-center mb-8">
          <div class="w-16 h-16 bg-gradient-to-br from-gray-700 to-gray-900 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-gray-800 mb-2">{t.businessPlan.title}</h2>
          <p class="text-gray-600 mb-4">{t.businessPlan.subtitle}</p>
          <div class="text-2xl font-bold text-gray-800">{t.businessPlan.price}</div>
        </div>

        <ul class="space-y-4 flex-grow mb-8">
          <li class="flex items-start gap-3">
            <svg class="h-6 w-6 text-gray-700 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-700 font-semibold">{t.businessPlan.features.allProFeatures}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-6 w-6 text-gray-700 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-700">{t.businessPlan.features.deployment}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-6 w-6 text-gray-700 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-700">{t.businessPlan.features.identityManagement}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-6 w-6 text-gray-700 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-700">{t.businessPlan.features.extendedApi}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-6 w-6 text-gray-700 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-700">{t.businessPlan.features.compliance}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-6 w-6 text-gray-700 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-700">{t.businessPlan.features.support}</span>
          </li>
        </ul>

        <div class="mt-auto">
          <a href={contactPath || '/kontakt'} class="block">
            <button class="w-full py-4 bg-gray-800 hover:bg-gray-900 text-white font-semibold rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl">
              {t.businessPlan.cta}
            </button>
          </a>
          {businessSuitePath && (
            <a href={businessSuitePath} class="block text-center text-sm text-indigo-600 hover:text-indigo-800 mt-3 font-medium">
              {t.businessPlan.learnMore} →
            </a>
          )}
        </div>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <div class="py-16 bg-white/50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-gray-800 mb-12">{t.features.title}</h2>
      <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <div class="text-center">
          <div class="w-14 h-14 bg-indigo-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="h-7 w-7 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
            </svg>
          </div>
          <h3 class="font-bold text-gray-800 mb-2">{t.features.upload.title}</h3>
          <p class="text-gray-600 text-sm">{t.features.upload.description}</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 bg-indigo-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="h-7 w-7 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="font-bold text-gray-800 mb-2">{t.features.security.title}</h3>
          <p class="text-gray-600 text-sm">{t.features.security.description}</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 bg-indigo-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="h-7 w-7 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="font-bold text-gray-800 mb-2">{t.features.processing.title}</h3>
          <p class="text-gray-600 text-sm">{t.features.processing.description}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Disclaimer -->
  <div class="py-8 bg-gray-50">
    <div class="container mx-auto px-4 text-center">
      <p class="text-sm text-gray-500">
        {t.footer.disclaimer}
        {termsPath && (
          <a href={termsPath} class="text-indigo-600 hover:text-indigo-800"> {t.footer.terms}</a>
        )}.
      </p>
    </div>
  </div>
</div>
