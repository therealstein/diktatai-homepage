---
import { getTranslation, getLocalePath, type Locale } from '../i18n/utils';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslation(locale);

const helpPath = getLocalePath('help', locale);
const contactPath = getLocalePath('contact', locale);
---

<div class="container mx-auto px-4 py-20">
  <div class="text-center mb-16">
    <h2 class="font-display text-4xl font-bold tracking-tight mb-5">{t('integrations.title')}</h2>
    <p class="text-lg max-w-2xl mx-auto text-base-content/80">
      {t('integrations.description')}
    </p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
    <!-- Email Integration Card -->
    <div class="group relative overflow-hidden rounded-3xl transition-all duration-500 hover:shadow-2xl">
      <div class="absolute inset-0 bg-gradient-to-br from-blue-600 to-blue-400 opacity-90"></div>
      <div class="absolute -right-10 -top-10 h-40 w-40 rounded-full bg-white/10 blur-2xl"></div>
      <div class="absolute -bottom-10 -left-10 h-40 w-40 rounded-full bg-white/10 blur-2xl"></div>

      <div class="relative p-8 md:p-12 flex flex-col h-full z-10">
        <div class="flex items-start justify-between mb-8">
          <div class="p-3 bg-white rounded-xl shadow-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12" viewBox="0 0 24 24" fill="none" stroke="#21759b" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
              <polyline points="22,6 12,13 2,6" />
            </svg>
          </div>
          <div class="inline-flex items-center px-4 py-1 rounded-full bg-white/20 text-white text-sm font-medium">
            {t('integrations.available')}
          </div>
        </div>

        <h3 class="text-3xl font-display font-bold text-white mb-4">{t('integrations.emailTitle')}</h3>
        <p class="text-white/90 text-lg mb-6 flex-grow">
          {t('integrations.emailDescription')}
        </p>

        <div class="mt-auto">
          {helpPath && (
            <a href={helpPath} class="inline-flex items-center gap-2 bg-white text-blue-600 hover:bg-blue-50 px-6 py-3 rounded-lg font-medium transition-colors duration-300">
              {t('integrations.howItWorks')}
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>

    <!-- Software Integration Card -->
    <div class="group relative overflow-hidden rounded-3xl transition-all duration-500 hover:shadow-2xl">
      <div class="absolute inset-0 bg-gradient-to-br from-gray-800 to-gray-600 opacity-90"></div>
      <div class="absolute -right-10 -top-10 h-40 w-40 rounded-full bg-white/5 blur-2xl"></div>
      <div class="absolute -bottom-10 -left-10 h-40 w-40 rounded-full bg-white/5 blur-2xl"></div>

      <div class="relative p-8 md:p-12 flex flex-col h-full z-10">
        <div class="flex items-start justify-between mb-8">
          <div class="p-3 bg-white rounded-xl shadow-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12" viewBox="0 0 24 24" fill="none" stroke="#003976" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2" />
              <line x1="8" y1="21" x2="16" y2="21" />
              <line x1="12" y1="17" x2="12" y2="21" />
            </svg>
          </div>
          <div class="inline-flex items-center px-4 py-1 rounded-full bg-[#003976]/30 text-white text-sm font-medium">
            {t('integrations.available')}
          </div>
        </div>

        <h3 class="text-3xl font-display font-bold text-white mb-4">{t('integrations.softwareTitle')}</h3>
        <p class="text-white/90 text-lg mb-6 flex-grow">
          {t('integrations.softwareDescription')}
        </p>

        <div class="mt-auto">
          {contactPath && (
            <a href={contactPath} class="inline-flex items-center gap-2 bg-[#003976] text-white hover:bg-[#00457d] px-6 py-3 rounded-lg font-medium transition-colors duration-300">
              {t('integrations.requestSolution')}
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>
  </div>

  <div class="mt-16 text-center">
    <h3 class="text-2xl font-bold mb-6">{t('integrations.whyValuable')}</h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
      <div>
        <h4 class="font-bold mb-2">{t('integrations.flexibility')}</h4>
        <p class="text-base-content/80">{t('integrations.flexibilityDescription')}</p>
      </div>
      <div>
        <h4 class="font-bold mb-2">{t('integrations.timeSaving')}</h4>
        <p class="text-base-content/80">{t('integrations.timeSavingDescription')}</p>
      </div>
      <div>
        <h4 class="font-bold mb-2">{t('integrations.seamlessProcesses')}</h4>
        <p class="text-base-content/80">{t('integrations.seamlessProcessesDescription')}</p>
      </div>
    </div>
  </div>
</div>
