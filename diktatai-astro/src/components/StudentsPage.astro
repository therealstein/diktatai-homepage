---
import { routes } from '../i18n/routes';
import type { StudentsTranslation } from '../i18n/userGroups/students';

interface Props {
  locale: 'de' | 'en' | 'nl' | 'es' | 'fr' | 'sv';
  t: StudentsTranslation;
}

const { locale, t } = Astro.props;
const registerUrl = 'https://app.diktat.ai/register';
---

<div class="bg-base-100 text-base-content">
  <!-- Hero Section -->
  <div
    class="hero min-h-[40vh] relative"
    style="background: linear-gradient(135deg, #ef56a4 0%, #4a90e2 100%); background-size: cover; background-position: center;"
  >
    <div class="hero-content text-center">
      <div class="backdrop-blur-sm bg-white/10 p-8 rounded-3xl shadow-2xl border border-white/20">
        <h1 class="font-display text-4xl font-bold text-white mb-2" style="text-shadow: 0 0 5px rgba(0,0,0,0.7)">
          {t.hero.title}
        </h1>
        <p class="text-lg text-white" style="text-shadow: 0 0 5px rgba(0,0,0,0.7)">
          {t.hero.subtitle}
        </p>
        <a href={registerUrl} class="mt-6 inline-block">
          <button class="font-display bg-white text-pink-500 text-xl font-bold py-3 px-8 rounded-full hover:bg-gray-100 transition-all shadow-lg tracking-wide">
            {t.hero.cta}
          </button>
        </a>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="py-16 container mx-auto px-4 max-w-4xl">
    <div class="prose prose-lg max-w-none">
      <!-- FÃ¼r Studium & Forschung Section -->
      <div class="mb-12">
        <h2 class="font-display text-3xl font-bold mb-8 text-center">
          {t.intro.title}
        </h2>
        <p class="text-lg mb-8">{t.intro.subtitle}</p>

        <!-- Students Card -->
        <div class="card bg-base-200 shadow-xl mb-8 p-8 rounded-3xl border border-base-300">
          <h3 class="font-display text-2xl font-bold mb-6">
            {t.students.title}
          </h3>
          <ul class="space-y-4">
            <li class="flex items-start">
              <svg class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>{t.students.item1}</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>{t.students.item2}</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>{t.students.item3}</span>
            </li>
          </ul>
        </div>

        <!-- Academics Card -->
        <div class="card bg-base-200 shadow-xl mb-8 p-8 rounded-3xl border border-base-300">
          <h3 class="font-display text-2xl font-bold mb-6">
            {t.academics.title}
          </h3>
          <ul class="space-y-4">
            <li class="flex items-start">
              <svg class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>{t.academics.item1}</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>{t.academics.item2}</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>{t.academics.item3}</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Process Section -->
      <div class="mb-12">
        <h2 class="font-display text-3xl font-bold mb-8 text-center">
          {t.process.title}
        </h2>
        <p class="text-lg mb-8">{t.process.subtitle}</p>

        <div class="grid md:grid-cols-2 gap-6">
          <div class="card bg-base-200 shadow-xl p-6 rounded-3xl border border-base-300">
            <h3 class="font-display text-xl font-bold mb-4">
              {t.process.step1.title}
            </h3>
            <p>{t.process.step1.text}</p>
          </div>

          <div class="card bg-base-200 shadow-xl p-6 rounded-3xl border border-base-300">
            <h3 class="font-display text-xl font-bold mb-4">
              {t.process.step2.title}
            </h3>
            <p>{t.process.step2.text}</p>
          </div>

          <div class="card bg-base-200 shadow-xl p-6 rounded-3xl border border-base-300">
            <h3 class="font-display text-xl font-bold mb-4">
              {t.process.step3.title}
            </h3>
            <p>{t.process.step3.text}</p>
          </div>

          <div class="card bg-base-200 shadow-xl p-6 rounded-3xl border border-base-300">
            <h3 class="font-display text-xl font-bold mb-4">
              {t.process.step4.title}
            </h3>
            <p>{t.process.step4.text}</p>
          </div>
        </div>
      </div>

      <!-- Advantages Section -->
      <div class="mb-12">
        <h2 class="font-display text-3xl font-bold mb-8 text-center">
          {t.advantages.title}
        </h2>
        <p class="text-lg mb-8">{t.advantages.subtitle}</p>

        <div class="space-y-6">
          <div class="card bg-base-200 shadow-xl p-6 rounded-3xl border border-base-300">
            <div class="flex items-start">
              <svg class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div>
                <h3 class="font-display text-xl font-bold mb-2">
                  {t.advantages.timeSaving.title}
                </h3>
                <p>{t.advantages.timeSaving.text}</p>
              </div>
            </div>
          </div>

          <div class="card bg-base-200 shadow-xl p-6 rounded-3xl border border-base-300">
            <div class="flex items-start">
              <svg class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
              <div>
                <h3 class="font-display text-xl font-bold mb-2">
                  {t.advantages.learning.title}
                </h3>
                <p>{t.advantages.learning.text}</p>
              </div>
            </div>
          </div>

          <div class="card bg-base-200 shadow-xl p-6 rounded-3xl border border-base-300">
            <div class="flex items-start">
              <svg class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              <div>
                <h3 class="font-display text-xl font-bold mb-2">
                  {t.advantages.research.title}
                </h3>
                <p>{t.advantages.research.text}</p>
              </div>
            </div>
          </div>

          <div class="card bg-base-200 shadow-xl p-6 rounded-3xl border border-base-300">
            <div class="flex items-start">
              <svg class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div>
                <h3 class="font-display text-xl font-bold mb-2">
                  {t.advantages.precision.title}
                </h3>
                <p>{t.advantages.precision.text}</p>
              </div>
            </div>
          </div>

          <div class="card bg-base-200 shadow-xl p-6 rounded-3xl border border-base-300">
            <div class="flex items-start">
              <svg class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
              </svg>
              <div>
                <h3 class="font-display text-xl font-bold mb-2">
                  {t.advantages.focus.title}
                </h3>
                <p>{t.advantages.focus.text}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.card {
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.card:hover {
  transform: translateY(-5px);
}
</style>
