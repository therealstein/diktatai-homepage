---
import { routes } from '../i18n/routes';
import type { BusinessSuiteTranslation } from '../i18n/userGroups/businessSuite';

interface Props {
  locale: 'de' | 'en' | 'nl' | 'es' | 'fr' | 'sv';
  t: BusinessSuiteTranslation;
}

const { locale, t } = Astro.props;

const getLocalizedPath = (routeKey: keyof typeof routes) => {
  const route = routes[routeKey];
  if (!route) return '/';
  const path = route[locale];
  return path || route.de || '/';
};
---

<div class="bg-base-100 text-base-content">
  <!-- Hero Section -->
  <div
    class="hero min-h-[40vh] relative"
    style="background: linear-gradient(135deg, #ef56a4 0%, #4a90e2 100%); background-size: cover; background-position: center;"
  >
    <div class="hero-content text-center">
      <div
        class="backdrop-blur-sm bg-white/10 p-8 rounded-3xl shadow-2xl border border-white/20"
      >
        <h1
          class="font-display text-4xl font-bold text-white mb-2"
          style="text-shadow: 0 0 5px rgba(0, 0, 0, 0.7)"
        >
          {t.hero.title}
        </h1>
        <p
          class="text-lg text-white max-w-4xl"
          style="text-shadow: 0 0 5px rgba(0, 0, 0, 0.7)"
        >
          {t.hero.subtitle}
        </p>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="py-16 container mx-auto px-4 max-w-4xl">
    <div class="prose prose-lg max-w-none">
      <!-- Part 1 Section -->
      <div class="mb-12">
        <h2 class="font-display text-2xl font-bold mb-6">
          {t.part1.title}
        </h2>
        <p class="mb-8">{t.part1.intro}</p>

        <div class="space-y-8">
          <!-- On-Premise Feature -->
          <div
            class="card bg-base-200 shadow-xl p-6 rounded-xl border border-base-300 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1"
          >
            <div class="flex items-center mb-4">
              <div class="bg-pink-500/10 p-3 rounded-xl mr-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6 text-pink-500"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
                  />
                </svg>
              </div>
              <h3 class="font-bold">
                {t.part1.features.onpremise.title}
              </h3>
            </div>
            <p>{t.part1.features.onpremise.description}</p>
          </div>

          <!-- Authentication Feature -->
          <div
            class="card bg-base-200 shadow-xl p-6 rounded-xl border border-base-300 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1"
          >
            <div class="flex items-center mb-4">
              <div class="bg-pink-500/10 p-3 rounded-xl mr-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6 text-pink-500"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"
                  />
                </svg>
              </div>
              <h3 class="font-bold">{t.part1.features.auth.title}</h3>
            </div>
            <p>{t.part1.features.auth.description}</p>
          </div>

          <!-- Data Storage Feature -->
          <div
            class="card bg-base-200 shadow-xl p-6 rounded-xl border border-base-300 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1"
          >
            <div class="flex items-center mb-4">
              <div class="bg-pink-500/10 p-3 rounded-xl mr-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6 text-pink-500"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"
                  />
                </svg>
              </div>
              <h3 class="font-bold">
                {t.part1.features.datastorage.title}
              </h3>
            </div>
            <p>{t.part1.features.datastorage.description}</p>
          </div>

          <!-- Compliance Feature -->
          <div
            class="card bg-base-200 shadow-xl p-6 rounded-xl border border-base-300 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1"
          >
            <div class="flex items-center mb-4">
              <div class="bg-pink-500/10 p-3 rounded-xl mr-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6 text-pink-500"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                  />
                </svg>
              </div>
              <h3 class="font-bold">
                {t.part1.features.compliance.title}
              </h3>
            </div>
            <p>{t.part1.features.compliance.description}</p>
          </div>

          <!-- Custom Training Feature -->
          <div
            class="card bg-base-200 shadow-xl p-6 rounded-xl border border-base-300 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1"
          >
            <div class="flex items-center mb-4">
              <div class="bg-pink-500/10 p-3 rounded-xl mr-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6 text-pink-500"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                  />
                </svg>
              </div>
              <h3 class="font-bold">
                {t.part1.features.training.title}
              </h3>
            </div>
            <p>{t.part1.features.training.description}</p>
          </div>
        </div>
      </div>

      <!-- Part 2 Section -->
      <div
        class="card bg-base-200 shadow-xl mb-12 p-8 rounded-3xl border border-base-300"
      >
        <h2 class="font-display text-2xl font-bold mb-6">
          {t.part2.title}
        </h2>
        <p class="mb-6">
          {t.part2.intro}
        </p>

        <div
          class="bg-gradient-to-br from-pink-500/5 to-pink-500/5 p-6 rounded-xl shadow-lg border border-pink-500/20"
        >
          <div class="flex items-center mb-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-pink-500 mr-3"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
              />
            </svg>
            <h3 class="text-xl font-bold">{t.part2.api.title}</h3>
          </div>
          <p>{t.part2.api.description}</p>
        </div>
      </div>

      <!-- Benefits Section -->
      <div class="mb-12">
        <h2 class="font-display text-2xl font-bold mb-6">
          {t.benefits.title}
        </h2>
        <ul class="space-y-4">
          <li class="flex items-start">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 13l4 4L19 7"
              />
            </svg>
            <span>{t.benefits.points.point1}</span>
          </li>
          <li class="flex items-start">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 13l4 4L19 7"
              />
            </svg>
            <span>{t.benefits.points.point2}</span>
          </li>
          <li class="flex items-start">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 13l4 4L19 7"
              />
            </svg>
            <span>{t.benefits.points.point3}</span>
          </li>
          <li class="flex items-start">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 13l4 4L19 7"
              />
            </svg>
            <span>{t.benefits.points.point4}</span>
          </li>
          <li class="flex items-start">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 13l4 4L19 7"
              />
            </svg>
            <span>{t.benefits.points.point5}</span>
          </li>
        </ul>
      </div>

      <!-- For Whom Section -->
      <div
        class="card bg-base-200 shadow-xl mb-12 p-8 rounded-3xl border border-base-300"
      >
        <h2 class="font-display text-2xl font-bold mb-6">
          {t.forWhom.title}
        </h2>
        <p class="mb-6">
          {t.forWhom.intro}
        </p>
        <ul class="space-y-4">
          <li class="flex items-start">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"
              />
            </svg>
            <span>{t.forWhom.points.point1}</span>
          </li>
          <li class="flex items-start">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"
              />
            </svg>
            <span>{t.forWhom.points.point2}</span>
          </li>
          <li class="flex items-start">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"
              />
            </svg>
            <span>{t.forWhom.points.point3}</span>
          </li>
          <li class="flex items-start">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-pink-500 mr-3 mt-1 flex-shrink-0"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"
              />
            </svg>
            <span>{t.forWhom.points.point4}</span>
          </li>
        </ul>
      </div>

      <!-- Call to Action -->
      <div
        class="card bg-gradient-to-br from-pink-500/10 to-pink-500/10 shadow-xl p-8 rounded-3xl border border-pink-500/20"
      >
        <h3 class="font-display text-2xl font-bold mb-4 text-center">
          {t.cta.title}
        </h3>
        <p class="text-lg text-center mb-8">
          {t.cta.paragraph}
        </p>
        <div class="text-center">
          <a href={getLocalizedPath('contact')}>
            <button
              class="font-display bg-pink-500 text-white text-xl font-bold py-3 px-8 rounded-full hover:bg-pink-600 transition-all shadow-lg tracking-wide"
            >
              {t.cta.button}
            </button>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.card {
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.card:hover {
  transform: translateY(-5px);
}
</style>
