---
import { routes } from '../i18n/routes';
import type { CoachesTranslation } from '../i18n/userGroups/coaches';

interface Props {
  locale: 'de' | 'en' | 'nl' | 'es' | 'fr' | 'sv';
  t: CoachesTranslation;
}

const { locale, t } = Astro.props;
const registerUrl = 'https://app.diktat.ai/register';

const getLocalizedPath = (routeKey: keyof typeof routes) => {
  const route = routes[routeKey];
  if (!route) return '/';
  const path = route[locale];
  return path || route.de || '/';
};
---

<div class="bg-base-100 text-base-content">
  <!-- Hero Section -->
  <div
    class="hero min-h-[50vh] relative"
    style="background: linear-gradient(135deg, #EF56A4 0%, #4A90E2 100%); background-size: cover; background-position: center;"
  >
    <div class="hero-content text-center">
      <div class="backdrop-blur-sm bg-white/10 p-8 rounded-3xl shadow-2xl border border-white/20 max-w-3xl">
        <h1 class="font-display text-4xl font-bold text-white mb-4" style="text-shadow: 0 0 5px rgba(0,0,0,0.7);">
          {t.hero.title}
        </h1>
        <p class="text-xl text-white mb-8" style="text-shadow: 0 0 5px rgba(0,0,0,0.7);">
          {t.hero.subtitle}
        </p>
        <a href={registerUrl}>
          <button class="font-display bg-white text-pink-500 text-xl font-bold py-4 px-8 rounded-full hover:bg-gray-100 transition-all shadow-lg tracking-wide">
            {t.hero.cta}
          </button>
        </a>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="py-16 container mx-auto px-4 max-w-4xl">
    <div class="prose prose-lg max-w-none">
      <!-- "Aha!" Section -->
      <div class="mb-16">
        <h2 class="font-display text-3xl font-bold mb-8 text-center">
          {t.ahaSection.title}
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="card bg-base-200 p-6 rounded-2xl border border-base-300">
            <h3 class="font-display text-xl font-bold mb-3">
              {t.ahaSection.focus.title}
            </h3>
            <p>
              {t.ahaSection.focus.text}
            </p>
          </div>

          <div class="card bg-base-200 p-6 rounded-2xl border border-base-300">
            <h3 class="font-display text-xl font-bold mb-3">
              {t.ahaSection.documentation.title}
            </h3>
            <p>
              {t.ahaSection.documentation.text}
            </p>
          </div>

          <div class="card bg-base-200 p-6 rounded-2xl border border-base-300">
            <h3 class="font-display text-xl font-bold mb-3">
              {t.ahaSection.preparation.title}
            </h3>
            <p>
              {t.ahaSection.preparation.text}
            </p>
          </div>

          <div class="card bg-base-200 p-6 rounded-2xl border border-base-300">
            <h3 class="font-display text-xl font-bold mb-3">
              {t.ahaSection.time.title}
            </h3>
            <p>
              {t.ahaSection.time.text}
            </p>
          </div>
        </div>
      </div>

      <!-- Core Features Section -->
      <div class="mb-16">
        <h2 class="font-display text-3xl font-bold mb-8 text-center">
          {t.features.title}
        </h2>

        <div class="space-y-6">
          <div class="card bg-base-200 p-6 rounded-2xl border border-base-300">
            <h3 class="font-display text-xl font-bold mb-3">
              {t.features.clientSession.title}
            </h3>
            <p>
              {t.features.clientSession.text}
            </p>
          </div>

          <div class="card bg-base-200 p-6 rounded-2xl border border-base-300">
            <h3 class="font-display text-xl font-bold mb-3">
              {t.features.dictation.title}
            </h3>
            <p>
              {t.features.dictation.text}
            </p>
          </div>

          <div class="card bg-base-200 p-6 rounded-2xl border border-base-300">
            <h3 class="font-display text-xl font-bold mb-3">
              {t.features.workshop.title}
            </h3>
            <p>
              {t.features.workshop.text}
            </p>
          </div>

          <div class="card bg-base-200 p-6 rounded-2xl border border-base-300">
            <h3 class="font-display text-xl font-bold mb-3">
              {t.features.interview.title}
            </h3>
            <p>
              {t.features.interview.text}
            </p>
          </div>
        </div>
      </div>

      <!-- Security Section -->
      <div class="mb-16">
        <h2 class="font-display text-3xl font-bold mb-8 text-center">
          {t.security.title}
        </h2>
        <p class="text-lg mb-8 text-center">
          {t.security.subtitle}
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="card bg-base-200 p-6 rounded-2xl border border-base-300">
            <div class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-pink-500 mr-4 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              <div>
                <h3 class="font-display text-xl font-bold mb-2">
                  {t.security.gdpr.title}
                </h3>
                <p>
                  {t.security.gdpr.text}
                </p>
              </div>
            </div>
          </div>

          <div class="card bg-base-200 p-6 rounded-2xl border border-base-300">
            <div class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-pink-500 mr-4 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
              </svg>
              <div>
                <h3 class="font-display text-xl font-bold mb-2">
                  {t.security.server.title}
                </h3>
                <p>
                  {t.security.server.text}
                </p>
              </div>
            </div>
          </div>

          <div class="card bg-base-200 p-6 rounded-2xl border border-base-300">
            <div class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-pink-500 mr-4 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
              <div>
                <h3 class="font-display text-xl font-bold mb-2">
                  {t.security.encryption.title}
                </h3>
                <p>
                  {t.security.encryption.text}
                </p>
              </div>
            </div>
          </div>

          <div class="card bg-base-200 p-6 rounded-2xl border border-base-300">
            <div class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-pink-500 mr-4 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z" />
              </svg>
              <div>
                <h3 class="font-display text-xl font-bold mb-2">
                  {t.security.sharing.title}
                </h3>
                <p>
                  {t.security.sharing.text}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Simplicity Section -->
      <div class="mb-16">
        <h2 class="font-display text-3xl font-bold mb-8 text-center">
          {t.simplicity.title}
        </h2>
        <p class="text-lg mb-8 text-center">
          {t.simplicity.subtitle}
        </p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="card bg-base-200 p-6 rounded-2xl border border-base-300">
            <div class="flex flex-col items-center text-center">
              <div class="w-12 h-12 rounded-full bg-pink-500 text-white flex items-center justify-center font-bold mb-4">1</div>
              <h3 class="font-display text-xl font-bold mb-2">
                {t.simplicity.upload.title}
              </h3>
              <p>
                {t.simplicity.upload.text}
              </p>
            </div>
          </div>

          <div class="card bg-base-200 p-6 rounded-2xl border border-base-300">
            <div class="flex flex-col items-center text-center">
              <div class="w-12 h-12 rounded-full bg-pink-500 text-white flex items-center justify-center font-bold mb-4">2</div>
              <h3 class="font-display text-xl font-bold mb-2">
                {t.simplicity.ai.title}
              </h3>
              <p>
                {t.simplicity.ai.text}
              </p>
            </div>
          </div>

          <div class="card bg-base-200 p-6 rounded-2xl border border-base-300">
            <div class="flex flex-col items-center text-center">
              <div class="w-12 h-12 rounded-full bg-pink-500 text-white flex items-center justify-center font-bold mb-4">3</div>
              <h3 class="font-display text-xl font-bold mb-2">
                {t.simplicity.text.title}
              </h3>
              <p>
                {t.simplicity.text.text}
              </p>
            </div>
          </div>
        </div>

        <div class="mt-8 card bg-base-200 p-6 rounded-2xl border border-base-300">
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-pink-500 mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <div>
              <h3 class="font-display text-xl font-bold mb-2">
                {t.simplicity.email.title}
              </h3>
              <p>
                {t.simplicity.email.text}
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Testimonials Section -->
      <div class="mb-16">
        <h2 class="font-display text-3xl font-bold mb-8 text-center">
          {t.testimonials.title}
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="card bg-base-200 p-6 rounded-2xl border border-base-300">
            <div class="flex flex-col items-center text-center">
              <div class="avatar placeholder mb-4">
                <div class="bg-neutral text-neutral-content rounded-full w-16">
                  <span class="text-2xl">MK</span>
                </div>
              </div>
              <p class="mb-4">
                {t.testimonials.testimonial1.quote}
              </p>
              <p class="font-bold">
                {t.testimonials.testimonial1.name}
              </p>
              <p class="text-sm">
                {t.testimonials.testimonial1.role}
              </p>
            </div>
          </div>

          <div class="card bg-base-200 p-6 rounded-2xl border border-base-300">
            <div class="flex flex-col items-center text-center">
              <div class="avatar placeholder mb-4">
                <div class="bg-neutral text-neutral-content rounded-full w-16">
                  <span class="text-2xl">TS</span>
                </div>
              </div>
              <p class="mb-4">
                {t.testimonials.testimonial2.quote}
              </p>
              <p class="font-bold">
                {t.testimonials.testimonial2.name}
              </p>
              <p class="text-sm">
                {t.testimonials.testimonial2.role}
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Final CTA Section -->
      <div class="card bg-gradient-to-br from-pink-500/10 to-blue-500/10 shadow-xl p-8 rounded-3xl border border-pink-500/20">
        <h2 class="font-display text-3xl font-bold mb-4 text-center">
          {t.cta.title}
        </h2>
        <p class="text-lg text-center mb-8">
          {t.cta.subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={registerUrl}>
            <button class="btn btn-primary btn-lg">
              {t.cta.button1}
            </button>
          </a>
          <a href={getLocalizedPath('pricing')}>
            <button class="btn btn-outline btn-lg">
              {t.cta.button2}
            </button>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.card {
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.card:hover {
  transform: translateY(-5px);
}
</style>
